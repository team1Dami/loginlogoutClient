<BorderPane fx:id="login" prefHeight="346.0" prefWidth="445.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ApplicationCliente.Controller.LoginController">
   <top>
      <Label text="LOGIN" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER_LEFT" prefHeight="178.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_LEFT" contentDisplay="TOP" text="User">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin></Label>
            <TextField fx:id="tfLogin" alignment="TOP_LEFT" promptText="Nombre de usuario">
               <VBox.margin>
                  <Insets bottom="25.0" left="100.0" right="100.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password">
               <VBox.margin>
                  <Insets left="100.0" />
               </VBox.margin></Label>
            <PasswordField fx:id="tfPasswd" promptText="Introduzca contraseÃ±a">
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </PasswordField>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox alignment="CENTER" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnLogin" disable="true" mnemonicParsing="false"  text="Entrar" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Label alignment="CENTER" text="Si no tiene cuenta, puede registrarse clicando en el siguiente boton">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets top="20.0" />
               </padding>
            </Label>
            <Button fx:id="btnRegister" mnemonicParsing="false" text="Registrarse">
               <VBox.margin>
                  <Insets bottom="20.0" top="25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </bottom>
</BorderPane>
