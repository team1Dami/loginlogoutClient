<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="login" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Control.LoginController">
   <top>
      <Label text="LOGIN" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="25.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="178.0" prefWidth="600.0" BorderPane.alignment="CENTER">
         <children>
            <Label alignment="TOP_LEFT" contentDisplay="TOP" text="User" />
            <TextField alignment="TOP_LEFT">
               <VBox.margin>
                  <Insets bottom="25.0" left="100.0" right="100.0" />
               </VBox.margin>
            </TextField>
            <Label text="Password" />
            <PasswordField>
               <VBox.margin>
                  <Insets left="100.0" right="100.0" />
               </VBox.margin>
            </PasswordField>
         </children>
      </VBox>
   </center>
   <bottom>
      <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Button disable="true" mnemonicParsing="false" text="Login" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="275.0" />
               </VBox.margin>
            </Button>
            <Label alignment="CENTER" text="Si no tiene cuenta, puede registrarse clicando en el siguiente boton">
               <VBox.margin>
                  <Insets left="150.0" />
               </VBox.margin>
               <padding>
                  <Insets top="50.0" />
               </padding>
            </Label>
            <Button mnemonicParsing="false" text="Register">
               <VBox.margin>
                  <Insets left="275.0" top="25.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </bottom>
</BorderPane>
